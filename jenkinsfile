pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Rampradhap24/Medi-track-.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t medi-track-app .'
            }
        }

        stage('Stop Existing Container') {
            steps {
                script {
                    sh 'docker stop medi-track-container || true'
                    sh 'docker rm medi-track-container || true'
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                sh 'docker run -d --name medi-track-container -p 3000:3000 medi-track-app'
            }
        }
    }

    post {
        always {
            echo 'Pipeline Completed'
        }
    }
}
